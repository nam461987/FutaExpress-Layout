                                        <option>2</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="address" class="control-label col-md-4 khoiluong-ico">Khối lượng (g)</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" id="address" placeholder="Enter address">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="address" class="control-label col-md-4 kichthuoc-ico">Kích thước (cm)</label>
                                <div class="col-md-8">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Dài (cm)">
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-4">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Rộng (cm)">
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-4">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Cao (cm)">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" name="radio"> Đóng gói bao bì
                                    </label>
                                    <label class="checkbox-inline">
